<Window x:Class="WorkflowPatternFinder.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WorkflowPatternFinder"
        xmlns:forms="clr-namespace:System.Windows.Forms;assembly=System.Windows.Forms"
        mc:Ignorable="d"
        Title="TreeMiner" Height="417.5" Width="1040.5" Background="#FF838383" HorizontalAlignment="Left" VerticalAlignment="Top" ScrollViewer.HorizontalScrollBarVisibility="Visible" ScrollViewer.CanContentScroll="True" UseLayoutRounding="False">
  <Grid Margin="0,0,0,0">
    <TabControl x:Name="tabControl" HorizontalAlignment="Left" VerticalAlignment="Top" Height="387" Width="1032">
      <TabItem Header="Pre-processing" Margin="10,0,-14,-2" IsSelected ="True" UseLayoutRounding="False">
        <Grid Background="#FFE5E5E5">
          <Label x:Name="ImportExcelDirectoryLabel" Content="Log directory..." HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="447" MouseDoubleClick="ImportExcelDirectoryLabel_DoubleClick"/>
          <Button x:Name="ImportExcelDirectoryButton" Content="Import workflow logs" HorizontalAlignment="Left" Margin="10,36,0,0" VerticalAlignment="Top" Width="172" Click="ImportExcelDirectoryButton_Click" RenderTransformOrigin="0.615,0.6"/>
          <Button x:Name="PreProcessingButton" Content="Start Processing..." HorizontalAlignment="Left" Margin="73,218,0,0" VerticalAlignment="Top" Width="190" Height="48" Click="PreProcessingButton_Click" Foreground="Black"/>
          <Label x:Name="PromScriptLabel" Content="Script location..." HorizontalAlignment="Left" Margin="10,61,0,0" VerticalAlignment="Top" Width="447" MouseDoubleClick="PromScriptLabel_DoubleClick"/>
          <Button x:Name="PromScriptButton" Content="Select Inductive Miner script" HorizontalAlignment="Left" Margin="10,87,0,0" VerticalAlignment="Top" Width="172" Click="PromScriptButton_Click" RenderTransformOrigin="0.615,0.6"/>
          <Label x:Name="ConsoleLabel" Content="Click start..." HorizontalAlignment="Left" Margin="73,290,0,0" VerticalAlignment="Top" Width="253"/>
          <ProgressBar x:Name="PreProgress" HorizontalAlignment="Left" Height="45" Margin="502,271,0,0" VerticalAlignment="Top" Width="410" IsIndeterminate="False"/>
          <Button x:Name="PythonButton" Content="Start Iron Python" HorizontalAlignment="Left" Margin="558,61,0,0" VerticalAlignment="Top" Width="105" Height="59" Click="PythonButton_Click"/>
        </Grid>
      </TabItem>
      <TabItem Header="Tree Finder" Margin="20,0,-24,-2">
        <Grid Background="#FFE5E5E5" Margin="0,0,-2,0">
          <Label x:Name="ImportTreeLabel" Content="Tree directory..." HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="447" MouseDoubleClick="ImportTreeLabel_DoubleClick"/>
          <Button x:Name="ImportTreeButton" Content="Import process trees" HorizontalAlignment="Left" Margin="10,36,0,0" VerticalAlignment="Top" Width="130" Click="ImportTreeButton_Click" RenderTransformOrigin="0.615,0.6"/>
          <Label x:Name="ImportPatternLabel" Content="Pattern file..." HorizontalAlignment="Left" Margin="10,61,0,0" VerticalAlignment="Top" Width="447" MouseDoubleClick="ImportPatternLabel_DoubleClick"/>
          <Button x:Name="ImportPatternButton" Content="Select pattern file" HorizontalAlignment="Left" Margin="10,87,0,0" VerticalAlignment="Top" Width="130" Click="ImportPatternButton_Click"/>
          <CheckBox x:Name="InducedCheckBox" Content="Treat as induced subtree" HorizontalAlignment="Left" Margin="10,124,0,0" VerticalAlignment="Top" Click="InducedCheckBox_Click"/>
          <Button x:Name="TreeStartButton" Content="Start mining..." HorizontalAlignment="Left" Margin="73,218,0,0" VerticalAlignment="Top" Width="190" Height="48" Click="TreeStartButton_Click" Foreground="Black"/>
          <ListBox x:Name="ValidOccurencesList" HorizontalAlignment="Left" Height="184" Margin="461,36,0,0" VerticalAlignment="Top" Width="492" MouseDoubleClick="ValidOccurencesList_DoubleClick"/>
          <Label x:Name="ResultDebug" Content="" HorizontalAlignment="Left" Margin="10,0,0,28" VerticalAlignment="Bottom" Height="28" Width="446"/>
          <Label x:Name="DebugLabel" Content="" HorizontalAlignment="Left" Margin="462,16,0,0" VerticalAlignment="Top" Height="28" Width="491"/>
          <ProgressBar x:Name="TreeProgress" HorizontalAlignment="Left" Height="45" Margin="502,271,0,0" VerticalAlignment="Top" Width="410" LargeChange="0" UseLayoutRounding="True" SmallChange="1" Value="-1"/>
        </Grid>
      </TabItem>
    </TabControl>

  </Grid>
</Window>
