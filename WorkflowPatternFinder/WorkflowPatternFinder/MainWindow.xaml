<Window x:Class="WorkflowPatternFinder.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WorkflowPatternFinder"
        xmlns:forms="clr-namespace:System.Windows.Forms;assembly=System.Windows.Forms"
        mc:Ignorable="d"
        Title="TreeMiner" Height="417.5" Width="1040.5" Background="#FF838383" VerticalAlignment="Stretch" ScrollViewer.HorizontalScrollBarVisibility="Visible" ScrollViewer.CanContentScroll="True" UseLayoutRounding="False" HorizontalContentAlignment="Stretch">
  <Grid Margin="0,0,0,0">
    <TabControl x:Name="tabControl" VerticalAlignment="Stretch" Height="387" Width="1032" HorizontalContentAlignment="Stretch">
      <TabItem Header="Pre-processing" Margin="10,0,-14,-2" IsSelected ="True" UseLayoutRounding="False">
        <Grid Background="#FFE5E5E5" UseLayoutRounding="False">
          <Label x:Name="ImportExcelDirectoryLabel" Content="Log directory..." HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="447" MouseDoubleClick="ImportExcelDirectoryLabel_DoubleClick" AllowDrop="True" DragDrop.Drop="ExcelDrop"/>
          <Button x:Name="ImportExcelDirectoryButton" Content="Import workflow logs" HorizontalAlignment="Left" Margin="10,36,0,0" VerticalAlignment="Top" Width="172" Click="ImportExcelDirectoryButton_Click" RenderTransformOrigin="0.615,0.6"/>
          <Button x:Name="PreProcessingButton" Content="Start Processing..." HorizontalAlignment="Left" Margin="73,218,0,0" VerticalAlignment="Top" Width="190" Height="48" Click="PreProcessingButton_Click" Foreground="Black"/>
          <Label x:Name="PromScriptLabel" Content="Script location..." HorizontalAlignment="Left" Margin="10,61,0,0" VerticalAlignment="Top" Width="447" MouseDoubleClick="PromScriptLabel_DoubleClick"/>
          <Button x:Name="PromScriptButton" Content="Select Inductive Miner script" HorizontalAlignment="Left" Margin="10,87,0,0" VerticalAlignment="Top" Width="172" Click="PromScriptButton_Click" RenderTransformOrigin="0.615,0.6"/>
          <Label x:Name="ConsoleLabel" Content="Click start..." HorizontalAlignment="Left" Margin="73,290,0,0" VerticalAlignment="Top" Width="253"/>
          <ProgressBar x:Name="PreProgress" HorizontalAlignment="Left" Height="45" Margin="502,271,0,0" VerticalAlignment="Top" Width="410" IsIndeterminate="False"/>
        </Grid>
      </TabItem>
      <TabItem Header="Tree Finder" Margin="20,0,-24,-2">
        <Grid Background="#FFE5E5E5" Margin="0,0,-2,0">
          <Label x:Name="ImportTreeLabel" Content="Tree directory..." HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="447" MouseDoubleClick="ImportTreeLabel_DoubleClick"/>
          <Button x:Name="ImportTreeButton" Content="Import process trees" HorizontalAlignment="Left" Margin="10,36,0,0" VerticalAlignment="Top" Width="130" Click="ImportTreeButton_Click" RenderTransformOrigin="0.615,0.6"/>
          <Label x:Name="ImportPatternLabel" Content="Pattern file..." HorizontalAlignment="Left" Margin="10,61,0,0" VerticalAlignment="Top" Width="447" MouseDoubleClick="ImportPatternLabel_DoubleClick"/>
          <Button x:Name="ImportPatternButton" Content="Select pattern file" HorizontalAlignment="Left" Margin="10,87,0,0" VerticalAlignment="Top" Width="130" Click="ImportPatternButton_Click"/>
          <CheckBox x:Name="InducedCheckBox" Content="Treat as induced subtree" HorizontalAlignment="Left" Margin="10,124,0,0" VerticalAlignment="Top" Click="InducedCheckBox_Click"/>
          <Button x:Name="TreeStartButton" Content="Start mining..." HorizontalAlignment="Left" Margin="73,218,0,0" VerticalAlignment="Top" Width="190" Height="48" Click="TreeStartButton_Click" Foreground="Black"/>
          <ListBox x:Name="ValidOccurencesList" HorizontalAlignment="Left" Height="184" Margin="461,36,0,0" VerticalAlignment="Top" Width="492" MouseDoubleClick="ValidOccurencesList_DoubleClick" KeyDown="ValidOccurencesList_KeyDown"/>
          <Label x:Name="ResultDebug" Content="" HorizontalAlignment="Left" Margin="10,0,0,28" VerticalAlignment="Bottom" Height="28" Width="446"/>
          <Label x:Name="ListSummaryLabel" Content="Patterns found (file path)&#x9;&#x9;&#x9;&#x9;&#x9;&#x9;  Similarity Score" HorizontalAlignment="Left" Margin="462,8,0,0" VerticalAlignment="Top" Height="28" Width="491"/>
          <ProgressBar x:Name="TreeProgressBar" HorizontalAlignment="Left" Height="45" Margin="502,271,0,0" VerticalAlignment="Top" Width="410" LargeChange="0" UseLayoutRounding="True" SmallChange="1" Value="-1" IsIndeterminate="False"/>
          <TextBox x:Name="SimTresholdValue" HorizontalAlignment="Left" Height="29" Margin="384,84,0,0" TextWrapping="Wrap" Text="0.8" VerticalAlignment="Top" Width="58" FontSize="18" SpellCheck.IsEnabled="True" PreviewTextInput="CheckThresholdInput" RenderTransformOrigin="1.828,-0.713"/>
          <Label x:Name="SimThresholdLabel" Content="Word2Vec Similarity Threshold:" HorizontalAlignment="Left" Margin="205,84,0,0" VerticalAlignment="Top"/>
          <CheckBox x:Name="CountCheckBox" Content="Count number of subtrees in model" HorizontalAlignment="Left" Margin="10,144,0,0" VerticalAlignment="Top" Click="CountCheckBox_Click"/>
        </Grid>
      </TabItem>
      <TabItem Header="Train word2vec" Margin="30,0,-34,-2">
        <Grid Background="#FFE5E5E5" Margin="0,0,-2,0">
          <Grid.ColumnDefinitions>
            <ColumnDefinition Width="133*"/>
            <ColumnDefinition Width="895*"/>
          </Grid.ColumnDefinitions>
          <Label x:Name="WindowSizeLabel" Content="Window size (context):" HorizontalAlignment="Left" Margin="10,15,0,0" VerticalAlignment="Top" Grid.ColumnSpan="2"/>
          <TextBox x:Name="WindowSizeValue" HorizontalAlignment="Left" Height="26" Margin="11,15,0,0" TextWrapping="Wrap" Text="2" VerticalAlignment="Top" Width="58" FontSize="18" SpellCheck.IsEnabled="True" PreviewTextInput="CheckIfInputIsDigit" RenderTransformOrigin="1.828,-0.713" Grid.Column="1"/>
          <Label x:Name="NumberOfEpochsLabel" Content="Number of epochs:" HorizontalAlignment="Left" Margin="10,75,0,0" VerticalAlignment="Top"/>
          <TextBox x:Name="NumberOfEpochsValue" HorizontalAlignment="Left" Height="25" Margin="11,76,0,0" TextWrapping="Wrap" Text="10" VerticalAlignment="Top" Width="58" FontSize="18" SpellCheck.IsEnabled="True" PreviewTextInput="CheckIfInputIsDigit" RenderTransformOrigin="1.828,-0.713" Grid.Column="1"/>
          <Label x:Name="MinCountLabel" Content="Minimum count:" HorizontalAlignment="Left" Margin="10,45,0,0" VerticalAlignment="Top"/>
          <TextBox x:Name="MinCountValue" HorizontalAlignment="Left" Height="25" Margin="11,46,0,0" TextWrapping="Wrap" Text="5" VerticalAlignment="Top" Width="58" FontSize="18" SpellCheck.IsEnabled="True" PreviewTextInput="CheckIfInputIsDigit" RenderTransformOrigin="1.828,-0.713" Grid.Column="1"/>
          <Button x:Name="TrainModelButton" Content="Train model" HorizontalAlignment="Left" Margin="58,187,0,0" VerticalAlignment="Top" Width="121" RenderTransformOrigin="0.547,1.5" Grid.ColumnSpan="2" Height="40" Click="TrainModelButton_Click"/>
          <Label x:Name="ModelPathLabel" Content="Model not found..." HorizontalAlignment="Left" Margin="10,119,0,0" VerticalAlignment="Top" Grid.ColumnSpan="2" Width="273"/>
          <Button x:Name="ChangeModelButton" Content="Change model" HorizontalAlignment="Left" Margin="28,150,0,0" VerticalAlignment="Top" Width="93" Height="21" Click="ChangeModelButton_Click"/>
          <Button x:Name="PlotModelButton" Content="Plot model" HorizontalAlignment="Left" Margin="129,15,0,0" VerticalAlignment="Top" Width="89" Click="ShowModel_Click" Grid.Column="1" Height="26"/>
        </Grid>
      </TabItem>
    </TabControl>

  </Grid>
</Window>
